<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadMarksFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/exam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:04:2021"
            android:layout_gravity="top|left"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorEvent"/>
        <TextView
            android:id="@+id/exam_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st-Sessional"
            android:layout_gravity="top|right"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorEvent"/>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="bottom|center"
        android:src="@drawable/divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/marks_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            <Button
                android:id="@+id/marks_upload"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:text="Upload Marks"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:background="@drawable/button_view"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>