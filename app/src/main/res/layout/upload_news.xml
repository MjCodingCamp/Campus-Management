<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/xl_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Notice Management"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/addNews_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:justificationMode="inter_word"
        android:inputType="text"
        android:textSize="18dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Add Notice Title"
        android:background="@drawable/edit_view"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/addNews_Des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:justificationMode="inter_word"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Add Description"
        android:background="@drawable/edit_view"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_ImageLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:drawablePadding="8dp"
        android:backgroundTint="#CDD1E6"
        android:textColor="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/upload_icon"
        android:textAllCaps="false"
        android:text="Choose Image"/>

</LinearLayout>