<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/xl_logo"/>

    <TextView
        android:id="@+id/title_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Assignment Management"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Year:"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"/>
        <Spinner
            android:id="@+id/spin_AssignYear"
            android:layout_marginLeft="20dp"
            android:foreground="@drawable/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Branch:"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"/>
        <Spinner
            android:id="@+id/spin_AssignBranch"
            android:layout_marginLeft="20dp"
            android:foreground="@drawable/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/assignment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:inputType="text"
        android:textSize="18dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Enter Assignment Name"
        android:background="@drawable/edit_view"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_PdfLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:drawablePadding="8dp"
        android:backgroundTint="#CDD1E6"
        android:textColor="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/upload_icon"
        android:textAllCaps="false"
        android:text="Choose PDF"/>

</LinearLayout>