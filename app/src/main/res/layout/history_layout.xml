<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingBottom="15dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/attendance_historyLogo"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:src="@drawable/history_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attendance_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="10:06:2021"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/attendance_historyLogo"
        app:layout_constraintStart_toStartOf="@+id/attendance_historyLogo"
        app:layout_constraintTop_toTopOf="@+id/attendance_historyLogo"
        app:layout_constraintVertical_bias="0.900" />

    <TextView
        android:id="@+id/attendance_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00 am"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/attendance_historyLogo"
        app:layout_constraintEnd_toEndOf="@+id/attendance_historyLogo"
        app:layout_constraintHorizontal_bias="0.210"
        app:layout_constraintStart_toEndOf="@+id/attendance_history_date"
        app:layout_constraintTop_toTopOf="@+id/attendance_historyLogo"
        app:layout_constraintVertical_bias="0.900" />

    <TextView
        android:id="@+id/attendance_history_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Data Structure (ST-CS)"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/attendance_historyLogo"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="@+id/attendance_historyLogo"
        app:layout_constraintTop_toTopOf="@id/attendance_historyLogo" />


</androidx.constraintlayout.widget.ConstraintLayout>