<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.MarksDisplayActivity">

    <LinearLayout
        android:id="@+id/marks_history_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/history_MarksDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:04:2021"
                android:layout_gravity="top|left"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorEvent"/>
            <TextView
                android:id="@+id/history_ExamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_gravity="top|right"
                android:textColor="@color/colorEvent"
                android:textStyle="bold"
                android:text="Surprise Test"/>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/divider"/>

    </LinearLayout>

</ScrollView>